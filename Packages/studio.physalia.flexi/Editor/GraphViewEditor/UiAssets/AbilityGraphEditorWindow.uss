}

.other-node #title-label {
  color: rgb(8, 10, 5);
  -unity-font-style: bold;
}

.other-node #title-icon-container {
  display: none;
}

.missing-node #title {
  background-color: rgba(255, 0, 0, 0.8);
}

.missing-node #title-icon-container {
  display: none;
}
